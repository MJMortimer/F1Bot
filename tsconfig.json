{
    "compilerOptions": {
      "target": "ESNext",                          
      "module": "ESNext",                    
      "lib": ["ESNext"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true
    }
  }